%section
  .col-md-12
    %h1 Your analyses

    %table.table.table-bordered.table-striped
      %tr
        %th Name
        %th Geo region
        %th Resolution
        %th

      - @analyses.each do |analysis|
        %tr
          %td= analysis.name
          %td= analysis.geo_region_id
          %td= analysis.resolution_mi
          %td
            = link_to 'Show', analysis
            = link_to 'Edit', edit_analysis_path(analysis)
            = link_to 'Destroy', analysis, :method => :delete, :data => { :confirm => 'Are you sure?' }

    %br

    = link_to 'New Analysis', new_analysis_path
