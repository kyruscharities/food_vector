= javascript_tag do
  var analyses_data = #{raw collection.to_json}

%section
  .col-md-12
    -#.start-new
    -#  %h2= link_to 'start a new food desert analysis', new_resource_path

    .row
      .analysis-block
        -# this next line makes a fake h2 so it's like all the other blocks
        -# because I'm not smart enough to always make this sizing right
        %h3 &nbsp;
        .start-new{onclick: "window.location.href = '#{new_resource_path}'"}
          = link_to new_resource_path do
            %i.plus.fa.fa-plus
            start a new food desert analysis

      - collection.order(:updated_at).each do |resource|
        .analysis-block
          %h3
            = link_to resource.name, resource
            %span.pull-right
              = link_to resource, method: :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-danger btn-xs' do
                %i.fa.fa-trash

          = link_to resource do
            .map-static-image{id: "map-image-#{resource.id}"}