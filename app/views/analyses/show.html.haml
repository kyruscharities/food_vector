-#- content_for :head do
= javascript_tag do
  var geo_region = #{raw resource.geo_region.to_json}
  -#var region_data = #{raw resource.analysis_geo_region_scores.to_json}
  var food_data = #{raw resource.food_sources_near_the_region.to_json}

#map-container
  #map{'data-analysis-id' => resource.id}

  #info.well
    .row
      .col-xs-12
        %h4.page-header.no-margin
          = resource.name
          %span.pull-right
            = link_to edit_resource_path, class: 'btn btn-xs btn-info' do
              %i.fa.fa-pencil

        %p.lead= resource.description

        = render 'layouts/messages'

        %p
          There are #{resource.located_food_sources.count} food sources
          located in the analysis region.

          = link_to 'Refresh the location of food sources in the region.', locate_food_sources_analysis_path(resource), method: :post

        %hr

        %p
          Analyzed #{resource.analysis_progress} regions
          = link_to 'Analyze', analyze_analysis_path(resource), method: :post, class: 'btn btn-primary' #if resource.analysis_complete?

        %hr

        #map-controls
          %h5 Show me
          %label
            = check_box_tag 'toggle-heatmap', 1, true
            Food Desert Risk

          %label
            = check_box_tag 'toggle-healthy', 1, true
            Healthy Food Sources

          %label
            = check_box_tag 'toggle-unhealthy', 1, true
            Unhealthy Food Sources