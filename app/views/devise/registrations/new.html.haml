%section
  .col-xs-12.col-md-6.col-md-offset-3
    .login-form
      %h2.page-header Sign Up
      = simple_form_for :user, :as => resource_name, :url => registration_path(resource_name), :defaults => {:input_html => {:class => 'form-control'}} do |f|
        = devise_error_messages!
        = f.input :name
        = f.input :email
        = f.input :password
        = f.input :password_confirmation

        = f.submit 'Sign up', class: 'submit btn btn-lg btn-primary'